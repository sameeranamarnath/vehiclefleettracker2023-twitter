{
  "compilerOptions": {
    "declaration": true,
    "target": "es5",
    "downlevelIteration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "lib": ["es2020", "dom"],
    "typeRoots": ["node_modules/@types"],
    "allowSyntheticDefaultImports": true,
    "rootDir": "./",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"],
      "@test/*": ["./test/*"]
    },
    "declarationMap": true,
    "sourceMap": true,
    "strict": true
  },
  "exclude": ["dist", "node_modules"],
  "exports": {
    ".": "./dist/src/index.js"
  }
}
